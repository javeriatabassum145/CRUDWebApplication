@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
@if(TempData["Success"]!=null){
    <h5 class="text-primary">@TempData["Success"]</h5>
}

<h1>List of Categories</h1>
<br />
<a class="btn btn-primary mb-3" asp-action="Create" asp-controller="Category">Create new Category</a>
<br />

<table class="table table-bordered table-striped" style ="width:100%">
    <thead>
        <tr>
        <th>
            Category Name
        </th>
        <th>
           Display Order
        </th>
        <th>
            Action
        </th>
        </tr>
    </thead>

    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.DisplayOrder
                </td>
                <td role="group">
                    <a asp-action="Edit" asp-controller="Category" asp-route-id = "@item.Id">Edit</a>
                    &nbsp;&nbsp;
                    <a asp-action="Delete" asp-controller="Category" asp-route-id = "@item.Id">Delete</a>
                </td>
            </tr>
        }

</tbody> 
    </table>
